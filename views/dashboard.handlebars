<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="local-machine mb-4">
      <h1>Local-Machine</h1>
  </div>
      
      
<section class="">
  <img src="images/blank-profile-picture.png" class="rounded-circle img-thumbnail mb-2 profileimg" width="100" height="100"
    id="profile-picture">

  <h3>{{Username}}</h3>
<div>
      <!--- {{!-- //Location// --}} --->
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill"
      viewBox="0 0 16 16">
      <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
  </svg>
      <span>{{location}}</span>
  </br>
</div>
  <a class="btn btn-primary mt-3 mb-2" href="/dashboard/account-settings/" role="button">Account Settings</a>

</section>

<div class="col-sm-4">
<section>
  <h2>Create New Post</h2>

  <form class="new-post-form forms">
    <div class="form-floating mb-3">
      <input id="post-title" name="post-title" type="text" class="form-control">
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating">
      <input id="content" name="content" type="text" class="form-control">
      <label for="floatingContent">Whats going on?</label>
    </div>
    <button type="submit" class="btn create mb-2">Post</button>
  </form>
</section>
</div>
<!--- {{#if posts.length}} --->
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>
<script src="/javascript/account-settings.js"></script>
</body>
</html>